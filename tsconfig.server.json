{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist",
    "target": "ES2022",
    "isolatedModules": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "strict": false
  },
  "include": ["api/**/*.ts", "server/**/*.ts"],
  "exclude": ["node_modules"]
} 